{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "本地打包-windowsx86_64_latest",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build_all_platforms.py",
            "console": "integratedTerminal",
            "args": [
                "--only-os",
                "win",
                "--only-arch",
                "x86_64"
            ]
        },
        {
            "name": "下载wheels",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/download_wheels.py",
            "console": "integratedTerminal",
            "args": [
                "--platform",
                "win_amd64",
                "--python-version",
                "3.13",
                "--abi",
                "cp313",
                "--dest",
                "${workspaceFolder}/resource/wheels/win-x64"
            ]
        },
        {
            "name": "启动agent",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/agent/main.py",
            "console": "integratedTerminal",
            "args": [
                "2cf5e50c-25ea-4c76-8a0d-d08ad60ece4d"
            ]
        },
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "生成完整 changelog",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/generate_changelog.py",
            "console": "integratedTerminal",
            "args": [
                "--output",
                "${workspaceFolder}/CHANGELOG.md"
            ]
        },
        {
            "name": "本地打包-windowsx86_64(指定版本-Args)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build_all_platforms.py",
            "console": "integratedTerminal",
            "args": [
                "--only-os",
                "win",
                "--only-arch",
                "x86_64",
                "--maafw-version",
                "v5.3.0-beta.5",
                "--mfaa-version",
                "v2.2.7"
            ]
        },
        {
            "name": "本地打包-windowsx86_64(指定版本与github-token-ENV)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build_all_platforms.py",
            "console": "integratedTerminal",
            "env": {
                "MAAFW_VERSION": "v5.3.0-beta.5",
                "MFAA_VERSION": "v2.2.7",
                "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
            },
            "args": [
                "--only-os",
                "win",
                "--only-arch",
                "x86_64"
            ]
        }
    ]
}
